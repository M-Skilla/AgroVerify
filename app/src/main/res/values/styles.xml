<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text Appearance for Chips with Jakarta Font -->
    <style name="TextAppearance.Chip.Jakarta" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/jakarta_medium</item>
        <item name="android:fontFamily">@font/jakarta_medium</item>
    </style>

    <!-- Custom Chip Style with Jakarta Font -->
    <style name="Widget.App.Chip.Filter.Jakarta" parent="Widget.Material3.Chip.Filter">
        <item name="android:textAppearance">@style/TextAppearance.Chip.Jakarta</item>
    </style>

    <style name="CircularImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Fullscreen Dialog Style -->
    <style name="Theme.AgroVerify.FullscreenDialog" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Make background transparent if you want the corners of the layout visible -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">bottom</item>
    </style>


</resources>

